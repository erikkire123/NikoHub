--Niko Hub--

local Library = loadstring(game:GetObjects("rbxassetid://7657867786")[1].Source)("Pepsi's UI Library") 
local Libraryflags = Library.flags 
local Wait = Library.subs.Wait 

local player = Library.LP -- Get the local player EZZ
--FUNCTIONS--

task.spawn(function()
while true do
if getgenv().TweenSpeedy == nil then
getgenv().TweenSpeedy = 100 
end
speed = getgenv().TweenSpeedy
function tpie(...)
   local plr=game.Players.LocalPlayer
   local args={...}
   if typeof(args[1])=="number"and args[2]and args[3]then
      args=Vector3.new(args[1],args[2],args[3])
   elseif typeof(args[1])=="Vector3" then
       args=args[1]
   elseif typeof(args[1])=="CFrame" then
       args=args[1].Position
   end
   local dist=(plr.Character.HumanoidRootPart.Position-args).Magnitude
   local calka = dist/speed
   game:GetService("TweenService"):Create(
       plr.Character.HumanoidRootPart,
       TweenInfo.new(calka,Enum.EasingStyle.Linear),
       {CFrame=CFrame.new(args)}
   ):Play()
end
wait(1)
end
end)

--[[
for i,v in pairs(game:GetService("Workspace").Scenery.Chests.ChestObjects:GetChildren()) do
if v.Open.Value == false then
tpie(v.Hitbox.CFrame)
end
end]]--

function farming()

if game.Players.LocalPlayer.Character.Humanoid.Sit == true then
game.Players.LocalPlayer.Character.Humanoid.Sit = false
end
    for i,v in pairs(game:GetService("Workspace").Scenery.Chests.ChestObjects:GetChildren()) do
if v.Open.Value == false then
tpie(v.Hitbox.CFrame)
end
end
end


-------------
local Window = Library:CreateWindow({
Name = "Niko Hub | Backpacking",
Themeable = {
Info = "Made By ieric#1234\ndiscord.gg/nikoloader",
Backdrop = 0,
Credit = false
}
})



-- Tab Element
local GeneralTab = Window:CreateTab({
	Name = 'General'
})

-- Section Element
local Section = GeneralTab:CreateSection({
	Name = 'Farm',
	Side = 'Left' -- Right/Left
})

local Section_Misc = GeneralTab:CreateSection({
	Name = 'Misc',
	Side = 'Right' -- Right/Left
})

-- Label Element
local Label = Section:CreateLabel({
	Text = 'Auto-Farm'
})



-- Toggle Element

local Toggle = Section:AddToggle({
	Name = 'Auto-Farm',
	Value = false, -- Default is false
	Flag = 'autofarm',
	Locked = false, -- Default is false
	Keybind = {
		Flag = 'keybindf',
		Mode = 'Toggle',
		Value = Enum.KeyCode.F
	}, -- Change to any bind you want, mode can be "Dynamic" or "Hold" or "Toggle", Toggle is default.

	Callback = function(state) -- Optional
		if (state) then
			getgenv().AutoFarm = true
            while true do wait()
            if getgenv().AutoFarm == true then
                farming()
                wait(2.55)
                end
            end
		else
			getgenv().AutoFarm = false
		end
	end
}) 

local Slider = Section:AddSlider({ -- You can also use it on Toggle instead of Section!
	Name = 'Tween Speed',
	Flag = "TwSpeed", -- hi hi ha,
	Value = 100,
	Min = 100,
	Max = 1000,
	Decimals = 1, 
	llegalInput = false, -- true allow textbox to break min & max limits
	Callback = function(x, y) -- Optional again, all callbacks are optinal...
		if (x) then
			getgenv().TweenSpeedy = y
		end
	end
})


-- Slider Element
local Slider = Section_Misc:AddSlider({ 
	Name = "WalkSpeed",
	Flag = "wsval", -- hi hi ha,
	Value = 16,
	Min = 16, 
	Max = 500,
	Decimals = 1,
	llegalInput = false,
	Callback = function(y) 

game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = y
		
	end
})

local Slidera = Section_Misc:AddSlider({ 
	Name = "JumpPower",
	Flag = "jfval", -- hi hi ha,
	Value = 50,
	Min = 50, 
	Max = 500,
	Decimals = 1,
	llegalInput = false,
	Callback = function(y) 
	if game.Players.LocalPlayer.Character.Humanoid.UseJumpPower ~= true then
game.Players.LocalPlayer.Character.Humanoid.UseJumpPower = true
end
game.Players.LocalPlayer.Character.Humanoid.JumpPower = y
		
	end
})



Library.Notify({
	Text = "Niko Hub Loaded!",
	Duration = math.random(5,10) -- Default is 5
})
